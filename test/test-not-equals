#!/usr/bin/env bash
set -uo pipefail

FAILS=0
SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
ROOT_DIR=$(dirname "$SCRIPT_DIR")
SCRIPT="$ROOT_DIR/assert-not-equals/assert-not-equals"

run_test() {
  local name="$1"
  local input_unexpected="$2"
  local input_actual="$3"
  local input_message="$4"
  local expected="$5"
  local expected_exit_code="$6"

  actual=$(INPUT_UNEXPECTED="$input_unexpected" \
    INPUT_ACTUAL="$input_actual" \
    INPUT_MESSAGE="$input_message" \
    "$SCRIPT")
  exit_code=$?

  echo "Test $name:"

  if [[ "$actual" == "$expected" && "$exit_code" == "$expected_exit_code" ]]; then
    echo "✅ Test passed"
  else
    echo "❌ Test failed"
    echo "Expected: '$expected' (exit code $expected_exit_code)"
    echo "Got:      '$actual' (exit code $exit_code)"
    FAILS=$((FAILS + 1))
  fi

  echo
}

#
# Assertion passes
#
run_test "assertion passes without message" \
  "hello" \
  "world" \
  "" \
  "" \
  0

run_test "assertion passes with message" \
  "world" \
  "hello" \
  "Values should not be equal!" \
  "" \
  0

#
# Assertion fails
#
run_test "assertion fails without message" \
  "foo" \
  "foo" \
  "" \
  "❌ Assertion Failed:
Expected values not to equal:
Value: foo" \
  1

run_test "assertion fails with message" \
  "foo" \
  "foo" \
  "Values should not be equal!" \
  "❌ Assertion Failed: Values should not be equal!
Expected values not to equal:
Value: foo" \
  1
